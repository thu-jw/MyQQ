<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/message_top_height"
    android:orientation="vertical"
    android:background="@drawable/chat_color_selector"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:paddingTop="5.0dip"
        android:paddingBottom="5.0dip">


        <ImageView
            android:id="@+id/chat_profile"
            style="@style/QQ.ImageView.Photo_Middle"
            android:layout_alignParentStart="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:src="@drawable/github" />

        <TextView
            android:id="@+id/chat_name"
            style="@style/QQ.TextView._Black"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_marginStart="10.0dip"
            android:layout_marginEnd="58.0dip"
            android:layout_toEndOf="@id/chat_profile"
            android:ellipsize="end"
            android:gravity="start|center"
            android:singleLine="true"
            android:text="ä½³"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/last_msg"
            android:layout_width="fill_parent"
            android:layout_height="35.0dip"
            android:layout_below="@id/chat_name"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="35.0dip"
            android:layout_toEndOf="@id/chat_profile"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:paddingLeft="6.0dip"
            android:paddingRight="6.0dip"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/chat_time"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_alignWithParentIfMissing="true"
            android:layout_above="@id/last_msg"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dip"
            android:ellipsize="end"
            android:gravity="center"
            android:padding="0.0dip"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="12.0sp" />

        <TextView
            android:id="@+id/chat_unread"
            android:layout_width="wrap_content"
            android:layout_height="16.0dip"
            android:layout_below="@id/chat_time"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5.0dip"
            android:layout_marginEnd="10.0dip"
            android:background="@drawable/unread"
            android:gravity="center"
            android:paddingStart="4dip"
            android:paddingEnd="4dip"
            android:text="1"
            android:textColor="#ffffffff"
            android:textSize="10.0sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/base_line_width_1"
        android:layout_alignParentBottom="true"
        android:background="@drawable/base_horizontal_line" >
    </View>

</RelativeLayout>
